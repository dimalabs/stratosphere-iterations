				<executions>
					<execution>
					  <id>source:aggregate</id>
					  <phase>package</phase>
					  <goals>
						<goal>aggregate</goal>
					  </goals>
					</execution>
				</executions>
				<configuration>
					<includes>
						<include>eu/stratosphere/nephele/*</include>
